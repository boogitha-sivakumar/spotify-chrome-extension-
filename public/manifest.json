{
    "name": "EasyLike",
    "version": "1.0.0",
    "description": "A chrome extension to like songs on spotify directly from youtube.",
    "manifest_version": 3,
    "author": "Sam Shervin S, Boogitha S",
    "action": {
        "default_popup": "index.html",
        "default_title": "EasyLike"
    },
    "permissions": ["activeTab", "scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*", "easylike://*"],
      "js": ["content.js"]
    }
  ]
}
